pipeline {
    agent any

     environment {
        SSH_CRED = 'node-app-key'               // Jenkins credential ID
        SERVER_IP = '15.207.223.127'          // Your Deploy EC2 IP
        REMOTE_USER = 'ubuntu'
        WEB_DIR = '/var/www/html/'
    }
    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                  url: 'https://github.com/USERNAME/portfolio-app.git'
            }
        }

        stage('Install Dependencies (if Node/React)') {
            steps {
                script {
                    if (fileExists('package.json')) {
                        sh 'npm install'
                        sh 'npm run build || echo "No build script found"'
                    }
                }
            }
        }

        stage('Deploy to Server') {
            steps {
                sshagent(['EC2_KEY']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no ubuntu@${SERVER_IP}'
                        sudo rm -rf ${APP_DIR} &&
                        sudo mkdir -p ${APP_DIR}
                    '
                    scp -o StrictHostKeyChecking=no -r ./build/* ubuntu@${SERVER_IP}:${APP_DIR} || \
                    scp -o StrictHostKeyChecking=no -r ./* ubuntu@${SERVER_IP}:${APP_DIR}
                    """
                }
            }
        }

        stage('Restart Node Server') {
            steps {
                sshagent(['EC2_KEY']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no ubuntu@YOUR_EC2_PUBLIC_IP '
                        cd ${APP_DIR}
                        pm2 delete portfolio || true
                        pm2 start server.js --name portfolio
                        pm2 save
                    '
                    """
                }
            }
        }
    }
}
